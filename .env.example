# Flask Configuration
FLASK_ENV=development
FLASK_SECRET_KEY=changeme_use_a_random_secret_key_here

# Application Mode
# Set to 'false' to run in offline mode without Google services (uses local SQLite + CSV data)
# Set to 'true' to use Google Cloud services (Firestore, GenAI, Search)
USE_GOOGLE_SERVICES=false

# Google Cloud Configuration (only needed if USE_GOOGLE_SERVICES=true)
FIRESTORE_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GENAI_API_KEY=your_genai_api_key_here

# Optional: Firestore Emulator (for local development)
# Uncomment to use Firestore emulator instead of production Firestore
# FIRESTORE_EMULATOR_HOST=localhost:8080

# Performance Configuration
MAX_PARALLEL_LOOKUPS=6

# Logging
LOG_LEVEL=INFO

# Session Configuration
SESSION_TTL_DAYS=30
